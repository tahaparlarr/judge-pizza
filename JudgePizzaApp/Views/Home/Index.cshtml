@model JudgePizzaApp.Models.ViewModels.ContactFormViewModel;

<section class="bg-hero d-flex flex-column justify-content-between">
    <div class="container-fluid px-5 py-3">
        <div class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand fs-3" href="#">Judge Pizza</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav small">
                    <li class="nav-item"><a class="nav-link active" href="#">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Ürünler</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">İletişim</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid h-100 p-5">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="mb-5">
                    <p class="fs-1 fw-normal lh-1">
                        Welcome to our esteemed dining establishment, where culinary excellence meets unparalleled
                        service.
                        Experience a journey of flavors meticulously crafted by our talented chefs using the finest
                        ingredients.
                    </p>
                </div>
                <button class="btn btn-wide btn-outline-light ">
                    LEARN MORE
                </button>
            </div>
        </div>
    </div>

    <div class="scrolling-text overflow-hidden">
        <div class="scrolling-text-inner text-white">
            <span>JUDGE PIZZA</span>
            <span>JUDGE PIZZA</span>
            <span>JUDGE PIZZA</span>
            <span>JUDGE PIZZA</span>
            <span>JUDGE PIZZA</span>
        </div>
    </div>

    <div class="overlay"></div>
</section>

<section class="mb-3">
    <div class="container-fluid p-5">
        <div class="row mb-3">
            <div class="col-12 d-flex align-items-center justify-content-between">
                <h2 class="text-dark display-6">Featured Products</h2>
                <button class="btn btn-outline-dark btn-wide">SHOP ALL</button>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-3">
                <div class="product-card">
                    <div class="product-image">
                        <img src="/images/p1.jpg" alt="Margherita Pizza">
                    </div>
                    <div class="product-info">
                        <h5 class="product-title text-dark">Margherita Pizza</h5>
                        <p class="product-description text-secondary text-truncate">
                            İnce hamur, taze mozarella, domates sosu ve fesleğen yapraklarıyla klasik İtalyan lezzeti.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-3 p-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 p-0">
                <img src="/images/aboutus.jpg" alt="Restoran iç mekanı" class="img-fluid object-fit-cover">
            </div>

            <div class="col-md-6 p-0 d-flex align-items-center">
                <div class="p-5 w-100">
                    <div class="mb-3 display-2 text-black">Restoranımız Hakkında</div>
                    <p class="mb-5 text-muted">
                        Restoranımızda mutfak sanatını, unutulmaz bir yemek deneyimiyle birleştiriyoruz. Kaliteye ve
                        misafir
                        memnuniyetine olan bağlılığımız, her ziyareti özel ve her yemeği bir kutlamaya dönüştürür.
                    </p>
                    <a href="/shop" class="btn btn-wide btn-dark">
                        Hakkımızda Daha Fazlası
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-3 p-0">
    <div class="scrolling-text overflow-hidden">
        <div class="scrolling-text-inner text-dark">
            <span>FOLLOW US</span>
            <span>⦁</span>
            <span>FOLLOW US</span>
            <span>⦁</span>
            <span>FOLLOW US</span>
            <span>⦁</span>
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <button class="btn btn-dark btn-wide">SOCIAL</button>
    </div>
</section>

<section>
    <div class="container-fluid p-5">
        <div class="row">
            <div class="col-6">
                <div class="w-75 text-dark">
                    <div class="display-3 mb-3"> İletişime Geçin</div>
                    <medium>
                        Interested in working together? Fill out some info and we will be in touch shortly. We can’t wait to hear from you!
                    </medium>
                </div>
            </div>
            <div class="col-md-6">
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">İsim</label>
                            <input asp-for="Name" asp- type="text" class="form-control" id="name" name="name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="surname" class="form-label">Soyisim</label>
                            <input asp-for="Surname" type="text" class="form-control" id="surname" name="surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">E-Posta</label>
                        <input asp-for="Email" type="email" class="form-control" id="email" name="email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label for="message" class="form-label">Mesajınız</label>
                        <textarea asp-for="Message" class="form-control" id="message" name="message" rows="4"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button asp-controller="Contact" asp-action="Send" type="submit" class="btn btn-dark rounded-pill py-2 px-3">Gönder</button>
                </form>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row mb-3">
            <div class="col text-center text-xxl text-nowrap text-dark">
                Judge Pizza
            </div>
        </div>

        <div class="row text-center text-dark">
            <div class="col-md-4 mb-3 fs-5">
                <div class="mb-3">
                    Konum
                </div>
                Madenler, Boran Sk. 22A, 34776 Ümraniye/İstanbul
            </div>

            <div class="col-md-4 mb-3 fs-5">
                <div class="mb-3">İletişim</div>
                <div>(531) 497 16 34</div>
                <div class="small">
                    <div>
                        Her gün 11.00 – 02.00
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3 fs-5">
                <div class="mb-3 text-center">
                    Bizi Takip Et
                </div>
                <ul class="list-unstyled d-flex justify-content-center">
                    <li class="bg-dark d-flex align-items-center justify-content-center rounded-circle"
                        style="width: 45px; height: 45px;">
                        <i class="bi bi-instagram text-white fs-5"></i>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</section>