@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetici Paneli</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JudgePizzaApp.styles.css" asp-append-version="true" />
</head>

<body class="m-0 p-0">
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-lg-2 bg-light shadow p-0 d-flex flex-column min-vh-100" id="sidebarMenu">
                <a class="navbar-brand mb-4 text-center" asp-controller="Home" asp-action="Index">
                    <img class="img-fluid" width="140" src="/images/judge-pizza-logo.png" alt="Judge Pizza" />
                </a>

                <ul class="nav nav-admin flex-column text-center mb-auto">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center justify-content-center gap-2
                   @(currentController == "Dashboard" ? "active text-brown" : "text-dark")" asp-controller="Dashboard"
                            asp-action="Index">
                            <i class="bi bi-speedometer2 fs-5"></i>
                            <span>Kontrol Paneli</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center justify-content-center gap-2
                   @(currentController == "Ingredient" ? "active text-brown" : "text-dark")"
                            asp-controller="Ingredient" asp-action="Index">
                            <i class="bi bi-basket fs-5"></i>
                            <span>Malzemeler</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center justify-content-center gap-2
                   @(currentController == "Product" ? "active text-brown" : "text-dark")" asp-controller="Product"
                            asp-action="Index">
                            <i class="bi bi-bag-check fs-5"></i>
                            <span>Ürünler</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col p-4 mt-3  overflow-auto">
                <div class="text-brown">
                    Tekrar hoşgeldin, Judge Pizza Admin👋
                </div>
                @RenderBody()

            </div>
        </div>
    </div>
</body>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>