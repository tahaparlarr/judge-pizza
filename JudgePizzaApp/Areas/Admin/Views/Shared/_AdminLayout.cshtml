@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JudgePizzaApp.styles.css" asp-append-version="true" />
</head>

<body class="m-0 p-0">
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-lg-2 bg-light p-0 d-flex flex-column min-vh-100" id="sidebarMenu">
                <a class="navbar-brand mb-4 text-center" asp-controller="Home" asp-action="Index">
                    <img class="img-fluid" width="140" src="/images/judge-pizza-logo.png" alt="Judge Pizza" />
                </a>

                <ul class="nav flex-column mb-auto">
                    <li class="nav-item">
                        <a class="nav-link active-brown @(currentController == "Dashboard" ? "active" : "text-dark")"
                            asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Ingredient" ? "active" : "text-dark")"
                            asp-controller="Ingredient" asp-action="Index">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Product" ? "active" : "text-dark")"
                            asp-controller="Product" asp-action="Index">Pizzalar</a>
                    </li>
                </ul>
            </div>

            <div class="col p-4 overflow-auto">
                @RenderBody()
            </div>
        </div>
    </div>
</body>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>